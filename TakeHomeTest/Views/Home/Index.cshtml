@model IEnumerable<TakeHomeTest.Models.Person>

@{
    ViewBag.Title = "Home Page";
}

@Html.Partial("_personCard", Model.ToArray()[0]) 
<script type="text/javascript">
	$(function () {
		$("#searchButton").click(function () {
			var person = {FirstName: "Me", LastName: "Mine"}
			$.ajax({
				type:"POST",
				contentType:"application/json; charset=utf-8",
				data:"{person:" + JSON.stringify(person)+"}",
				url:"/Home/GetData",
				success: function (data) {
					alert("Person Name: " + data.FirstName + " " + data.LastName);
				},
				error: function (result) {
					alert("No Results");
				}
			})
		})
	})

	$(function () {
		$("#createButton").click(function () {
			var person = { FirstName: "Me", LastName: "Mine" }
			$.ajax({
				type: "POST",
				contentType: "application/json; charset=utf-8",
				data: "{person:" + JSON.stringify(person) + "}",
				url: "/Home/GetData",
				success: function (data) {
					alert("Person Name: " + data.FirstName + " " + data.LastName);
				},
				error: function (result) {
					alert("No Results");
				}
			})
		})
	})
</script>

